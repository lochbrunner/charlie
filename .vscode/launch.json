{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-debug/bin/charliec",
            "args": [
                "run",
                "--debug",
                "3232",
                "./samples/simple.chl"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Console adapter",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/src/adapter/console/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/src/adapter/console/dist/**/*.js"
            ]
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Extension",
            // "preLaunchTask": "npm",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/src/adapter/vscode-charlie-adapter"
            ],
            "outFiles": [
                "${workspaceFolder}/src/adapter/vscode-charlie-adapter/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/adapter/vscode-charlie-adapter/src/debug-adapter.ts",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceFolder}/src/adapter/vscode-charlie-adapter/out/**/*.js"
            ]
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Extension Mock",
            // "preLaunchTask": "npm",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/eval/debug-mock"
            ],
            "outFiles": [
                "${workspaceFolder}/eval/debug-mock/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server Mock",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/eval/debug-mock/src/debugAdapter.ts",
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceFolder}/eval/debug-mock/out/**/*.js"
            ]
        },
    ],
    "compounds": [
        {
            "name": "CLI + vscode",
            "configurations": [
                "CLI",
                "Extension",
                "Server"
            ]
        },
        {
            "name": "mock",
            "configurations": [
                "Extension Mock",
                "Server Mock",
                "CLI"
            ]
        }
    ]
}